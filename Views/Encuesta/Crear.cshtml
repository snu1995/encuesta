@using encuesta.Controllers;

@model Encuesta
 <form asp-controller="Encuesta" asp-action="Crear" method="post">

 <div class="container-fluid">
	 <div class="container mt-5">
		 <div class="card mt-5">
			 <div class="card-header bg-primary text-light">
                <h2>Crear Nueva Encuesta</h2>
             </div>
			 <div class="card-body">
             
                    <div class="container mt-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre)
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                        </div>
                        <div class="form-group mt-3">
                            @Html.LabelFor(model => model.Descripcion)
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
                        </div>
                       
                       
                    </div>
               
			 </div>
             <div class="card-footer">

					<button type="submit" class="btn btn-primary mt-3">Guardar</button>
					<a class="mt-3 btn btn-secondary float-end" href="@Url.Action("Index","Encuesta")">Cancelar</a>
			   </div>
		 </div>
	 </div>
 </div>
  </form>