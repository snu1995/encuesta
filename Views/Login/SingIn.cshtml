@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SingIn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card mt-5">
                    <div class="card-header bg-primary text-light">
                        Iniciar Sesion
                    </div>
                    <div class="card-body">

                        <form asp-controller="Login" asp-action="SingIn" method="post">

                            <input class="form-control mrt-5 mb-3" type="text" placeholder="Correo" required name="email" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="passwordUser" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                           <div class="alert-warning mx-auto">
                                <div class="row text-center">

                                   <span class="mt2 mt-2"> ¿No tienes una cuenta? </span>
                               
                               </div>
                               <div class="row text-center">
                                    <a class="mb-2" href="@Url.Action("SingUp","Login")"> Registraste!</a>
                               </div>
                           </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
