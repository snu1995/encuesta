@{
    int encuestaIdFromViewBag = (int)ViewBag.EncuestaId;
   }

@model Campo

 <form asp-controller="Campo" asp-action="Crear" method="post">
   
         <div class="container-fluid mt-5">
	   <div classs="container mt-5">
		   <div class="card">
			   <div class="card-header bg-primary text-light">
				<h2>Crear Campo</h2>
				</div>
				<div class="card-body">
					<div class="container mt-3">
	<div class="form-group">
							@Html.LabelFor(model => model.Nombre)
							@Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
	</div>
	<div class="form-group  mt-3">
							@Html.LabelFor(model => model.Titulo)
							@Html.TextBoxFor(model => model.Titulo, new { @class = "form-control" })
	</div>
	<div class="form-group mt-3">
	<label class="form-check-label">Tipo de campo</label>
							@Html.DropDownListFor(
		model => model.TipoCampoId,
		new SelectList(
		Enum.GetValues(typeof(TipoCampo))
		.Cast<TipoCampo>()
		.Select(e => new
		{
		Value = (int)e,
		Text = e.ToString()
		}),
		"Value",
		"Text"),
		"Selecciona un tipo",
		new { @class = "form-control" }
		)
	</div>
	<div class="form-group mt-3">

		<div class="form-check">
								@Html.CheckBoxFor(model => model.EsRequerido, new { @class = "form-check-input" })
			<label class="form-check-label">Requerido</label>
		</div>
	</div>

						@Html.HiddenFor(model => model.EncuestaId, new { Value = encuestaIdFromViewBag })
</div>

				</div>
				<div class="card-footer">
                     <button type="submit" class="mt-3 btn btn-primary float-start">Guardar</button>
					 <a class="mt-3 btn btn-secondary float-end" href="@Url.Action("Index", new {id = encuestaIdFromViewBag})">Cancelar</a>
			   </div>

			</div>
			</div>
			</div>
</form>
